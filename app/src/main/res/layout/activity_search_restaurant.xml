<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchMeetingPlaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/find_restaurant"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#FFC423"
                android:text=" 찾기"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:textColor="@color/ivory"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/search_restaurant_text"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/middle_green"
                    android:ems="10"
                    android:fontFamily="@font/gmarket_sans_ttf_light"
                    android:hint="장소를 검색하세요!"
                    android:inputType="textPersonName"
                    android:textCursorDrawable="@color/middle_green" />

                <Button
                    android:id="@+id/btn_search_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/real_orange"
                    android:fontFamily="@font/gmarket_sans_ttf_light"
                    android:text="찾기" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/map_scroll"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/map_find"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" >
                </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="원하는 장소가 여기가 맞나요?" />

            <TextView
                android:id="@+id/searching_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/deep_green"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_search_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:backgroundTint="@color/orange"
                    android:fontFamily="@font/gmarket_sans_ttf_light"
                    android:text="취소" />

                <Button
                    android:id="@+id/btn_search_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:backgroundTint="@color/real_orange"
                    android:fontFamily="@font/gmarket_sans_ttf_light"
                    android:text="선택" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-247dp">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC423"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_page"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="2"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:text="마이 페이지"
                android:textColor="#FFF3D3 "
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myPage_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="닉네임"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myPage_editNickname"
                    android:layout_width="316dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="TextView"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myPage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="이름"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/myPage_editName"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myPage_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:text="아이디"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/myPage_editId"
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myPage_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="나이"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/myPage_editAge"
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myPage_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="성별"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/myPage_editGender"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_myPostView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="내가 작성한 post (수정 및 삭제)"
            android:fontFamily="@font/gmarket_sans_ttf_light"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textIsSelectable="false" />

        <Button
            android:id="@+id/btn_editInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="회원정보 수정하기"
            android:fontFamily="@font/gmarket_sans_ttf_light"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="로그아웃"
            android:fontFamily="@font/gmarket_sans_ttf_light"
            android:textColor="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>